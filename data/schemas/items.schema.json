{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Barista Content Items",
  "description": "List of content items for a Barista source",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "text": {
        "type": "string",
        "description": "The main text content to display"
      },
      "fullText": {
        "type": "string",
        "description": "Detailed text content (optional)"
      },
      "link": {
        "type": "string",
        "format": "uri",
        "description": "URL associated with the content (optional)"
      }
    },
    "required": ["text"],
    "additionalProperties": false
  }
}
